program Project1;

uses
  Vcl.Forms,
  uLogin in 'uLogin.pas' {frmLogin},
  uMain in 'uMain.pas' {Mainfrm},
  uDBUtils in 'uDBUtils.pas',
  uConfig in 'uConfig.pas' {Form3},
  uIniUtils in 'uIniUtils.pas',
  Unit4 in 'Unit4.pas' {Form4};

{$R *.res}

begin
  Application.Initialize;
  Application.MainFormOnTaskbar := True;

  // 1. Creamos primero el uMain
  Application.CreateForm(TMainfrm, Mainfrm);
  Mainfrm.WindowState := wsMaximized;
  Mainfrm.Enabled := False;

  // 2. Se muestra el form Login por encima
  Application.CreateForm(TfrmLogin, frmLogin);
  frmLogin.Position := poScreenCenter;
  frmLogin.ShowModal;

  // 3. Comprobamos si el login fue exitoso.
  Application.CreateForm(TForm3, Form3);
  Application.CreateForm(TForm4, Form4);
  Application.Run;
end.
