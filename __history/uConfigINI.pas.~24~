unit uConfigINI;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, ini;

type
  TForm3 = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    procedure CargarDatos;
    procedure GuardarDatos;
  public
    { Public declarations }
  end;

var
  Form3: TForm3;

implementation

{$R *.dfm}

procedure TForm3.FormCreate(Sender: TObject);
begin
  CargarDatos;
end;

procedure TForm3.CargarDatos;
var
  Host, DBName, User, Pass: string;
  Port: Integer;
begin
  LeerDatosConexion(Host, DBName, User, Pass, Port);
  Edit1.Text := Host;
  Edit2.Text := IntToStr(Port);
  Edit3.Text := User;
  Edit4.Text := Pass;
end;

procedure TForm3.GuardarDatos;
var
  Servidor, BaseDatos, Usuario, Clave: string;
  Puerto: Integer;
begin
  Servidor := Edit1.Text;
  Puerto   := StrToIntDef(Edit2.Text, 5432);
  Usuario  := Edit3.Text;
  Clave    := Edit4.Text;

  // Usamos la función de la unit ini.pas
  GuardarDatosConexion(Servidor, 'bdgevensoftbase', Usuario, Clave, Puerto);

  ShowMessage('✅ Configuración guardada correctamente');
end;

procedure TForm3.Button1Click(Sender: TObject);
begin
  GuardarDatos;
  Close;
end;

procedure TForm3.Button2Click(Sender: TObject);
begin
  Close;
end;
end.
